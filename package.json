    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@remix-run/serve": "^1.7.6",
    "@tailwindcss/typography": "^0.5.4",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
